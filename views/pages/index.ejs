                        <p>Author: <%= book.author %> </p>
                        <p>Book ISBN: <%= book.isbn %> </p>
                        <p>Description: <%= book.descript %> </p>
                        
                    </li>
                    <br>
                    <form>
                        <button>Delete Book</button>
                        <button>Update Book</button>
                    </form>
                    <br>

                <%   }) %>


                </ul>

