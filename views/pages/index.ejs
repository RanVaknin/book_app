    <body>

    </div>

        <header>
            <h1>You have (<%= data.length %>) book entries</h1>

            <a href="/search"> Search For a Book</a>

        </header>
        <main>
            <br>
            <ul>
                <% data.forEach(book =>{ %>
                    <li>
                        <img src=   <%= book.image_url%> alt="image placehoder">
